<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainController">
   <content>
      <VBox>
         <children>
            <MenuBar>
               <menus>
                  <Menu mnemonicParsing="false" text="File">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Close" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Questions">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#onQuestionListMenuItemClick" text="View items" />
                        <MenuItem mnemonicParsing="false" text="Create item" />
                        <MenuItem mnemonicParsing="false" text="Edit item" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Reports">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#onReportListMenuItemClick" text="View items" />
                        <MenuItem mnemonicParsing="false" text="Create item" />
                        <MenuItem mnemonicParsing="false" text="Edit item" />
                    </items>
                  </Menu>
               </menus>
            </MenuBar>
         </children>
      </VBox>
   </content>
</ScrollPane>
